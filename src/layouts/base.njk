<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/main.css">

    <title>{{ site.name }}</title>
    <meta property="og:title" content="{{ site.name }}">
    <meta property="og:type" content="website">

    {% if home %}
      <meta name="description" content="{{ site.description }}">
      <meta property="og:description" content="{{ site.description }}"/>
    {% else %}
      <meta name="description" content="{{ description if description else summary }}">
      <meta property="og:description" content="{{ description if description else summary }}"/>
    {% endif %}

    <meta property="og:locale" content="sr_RS"/>

    <meta property="og:url" content="{{ link }}">
    <meta property="og:site_name" content="{{ site.name }}"/>
    {% if og.img %}
      <meta property="og:image" content="{{site.baseURL}}/{{url}}{{ og.img }}"/>
    {% elseif home %}
      <meta property="og:image" content="{{site.baseURL}}/og.png"/>
    {% endif %}

    {% block head %}{% endblock %}
  </head>
  <body>

    {% block main %}{% endblock %}

  </body>
</html>
